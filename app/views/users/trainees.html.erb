<%# current_user file %>
<%= link_to 'Back', courses_path, class: "btn btn-default btn-xs" %>

<div id="current_user" class="row">
  <div class="col-sm-12">
    <div class="my_card">
      <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-3">
          <div class="picture">
            <% if current_user.image.present? %>
              <%= image_tag current_user.image_url(:thumb) %>
            <% else %>
              <img src="https://i.imgur.com/IQUU8my.png" alt="avatar" height="150" width="150">
            <% end %>
          </div>
        </div>
        <div class="col-sm-3">
            <h2 class="text-center"><%= current_user.name %></h2>
            <div class="level_status text-center">
              <span><%= current_user.level %></span>
            </div>
          <ul class="my_info">
            <li>Email：<%= current_user.email %></li>
            <li>Mobile：<%= current_user.mobile_phone %></li>
            <li><%= current_user.intro %></li>
          </ul>
          <div class="contacts">
            <ul>
              <li><i class="fa fa-google-plus-square"></i></li>
              <li><i class="fa fa-facebook-square"></i></li>
              <li><i class="fa fa-twitter-square"></i></li>
              <li><i class="fa fa-linkedin-square"></i></li>
            </ul>
          </div>
        </div>
        <div class="col-sm-3"></div>
      </div>
    </div>
  </div>
</div>
<hr>
<div id="trainees" class="row">
  <% @trainees.each do |trainee| %>
    <div class="col-sm-4 col-xs-12">
      <div class="one_card">
        <div class="row">
          <div class="col-sm-12 one_card_top">
            <div class="picture">
              <% if trainee.image.present? %>
                <%= image_tag trainee.image_url(:medium) %>
              <% else %>
                <img class="default_avatar" src="https://i.imgur.com/IQUU8my.png" alt="avatar" height="80px" width="80px">
              <% end %>
            </div>
            <div class="name">
              <h3><%= trainee.name %></h3>

              <% if trainee.level == "Entry Level" %>
                <div class="level_status entry">
                  <span><%= trainee.level %></span>
                </div>
              <% elsif trainee.level == "Medium Level" %>
                <div class="level_status medium">
                  <span><%= trainee.level %></span>
                </div>
              <% elsif trainee.level == "Advanced Level" %>
                <div class="level_status advanced">
                  <span><%= trainee.level %></span>
                </div>
              <% end %>

              <div class="contacts">
                <ul>
                  <li><i class="fa fa-google-plus-square"></i></li>
                  <li><i class="fa fa-facebook-square"></i></li>
                  <li><i class="fa fa-twitter-square"></i></li>
                  <li><i class="fa fa-linkedin-square"></i></li>
                </ul>
              </div>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-sm-12">
              <div class="others_info">
                <ul>
                  <li>
                    <a href="mailto:<%= trainee.email %>"><i class="fa fa-envelope"> Send me !</i></a>
                  </li>
                  <li><%= trainee.intro %></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%# all trainees except current_user profile %>

</div>