<h1 class="text-center">Admin Lessons</h1>

<%= link_to "Create", new_admin_lesson_path(course_id: @course), :class => "btn btn-warning btn-xs" %>
<%= link_to 'Back', admin_courses_path, class: "btn btn-default btn-xs" %>
<table class="table table-hover text-center">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= link_to lesson.title, admin_lesson_path(lesson), :class => "btn btn-info" %></td>
        <td><%= lesson.description %></td>
        <td>
          <%= link_to "Edit", edit_admin_lesson_path(lesson, course_id: @course), :class => "btn btn-info" %>
          <%= link_to "Del", admin_lesson_path(lesson, course_id: @course), method: :delete, :class => "btn btn-danger", data: { confirm: "Delete " + lesson.title + " ?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>