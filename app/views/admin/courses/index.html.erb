<h1 class="text-center">Admin Courses</h1>
<div class="btn btn-success btn-xs">Create</div>
<table class="table table-hover text-center">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |course| %>
    <tr>
      <td><%= course.title %></td>
      <td><%= course.description %></td>
      <td>
        <div class="btn btn-primary btn-xs">EDIT</div>
        <div class="btn btn-danger btn-xs">DEL</div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>