<h2>Admin edit <%= @lesson.title %></h2>

<%= form_for @lesson, url: admin_lesson_path(@lesson, course_id: @course.id) do |f| %>
  <div class="form-group">
    <%= render partial: 'form', locals: { f: f } %>
    <%= f.submit :class => "btn btn-success" %>
    <%= link_to 'Cancel', admin_course_path(@course), class: "btn btn-default" %>
  </div>
<% end %>