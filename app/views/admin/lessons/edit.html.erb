<h2>Admin edit <%= @lesson.title %></h2>

<%= form_for @lesson, url: admin_lesson_path(@lesson) do |f| %>
  <div class="form-group">
    <%= render partial: 'form', locals: { f: f } %>
    <%= f.submit :class => "btn btn-success" %>
    <%= link_to 'Cancel', admin_lessons_path, class: "btn btn-default" %>
  </div>  
<% end %>